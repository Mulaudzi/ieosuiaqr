{
    "name": "ieosuia/qr-api",
    "description": "Plain PHP API backend for IEOSUIA QR platform",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.10",
        "geoip2/geoip2": "^3.0",
        "donatj/phpuseragentparser": "^1.8",
        "dompdf/dompdf": "^3.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test-coverage": "phpunit --configuration phpunit.xml --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true
    }
}
